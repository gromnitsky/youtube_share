{
    "manifest_version": 2,
    "name": "youtube_share",
    "description": "An exotic way to share a youtube video w/o iframes",
    "version": "0.0.1",

    "permissions": [
        "contextMenus",
	"clipboardWrite",
	"https://i.ytimg.com/",
	"https://api.imgur.com/",

	"http://localhost:3000/"
    ],
    "background": {
	"persistent": false,
	"scripts": [
	    "youtube_share.js",
	    "event_page.js"
	]
    },
    "content_scripts": [{
	"matches": ["<all_urls>"],
	"css": ["vendor/nprogress/nprogress.css", "content_script.css"],
	"js": ["vendor/nprogress/nprogress.js", "content_script.js"]
    }]
}
