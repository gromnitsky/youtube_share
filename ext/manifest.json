{
    "manifest_version": 2,
    "name": "youtube_share",
    "description": "An exotic way to share a youtube video w/o iframes",
    "version": "0.0.1",

    "permissions": [
        "contextMenus",
	"clipboardWrite",
	"https://i.ytimg.com/"
    ],
    "background": {
	"persistent": false,
	"scripts": [
	    "youtube_share.js",
	    "event_page.js"
	]
    }
}
