{
    "manifest_version": 2,
    "name": "youtube_share",
    "description": "An exotic way to share a youtube video w/o iframes",
    "version": "0.0.4",

    "permissions": [
        "contextMenus",
	"clipboardWrite",
	"notifications"
    ],
    "background": {
	"persistent": false,
	"scripts": [
	    "youtube_share.js",
	    "event_page.js"
	]
    },
    "content_scripts": [{
	"matches": ["<all_urls>"],
	"css": ["vendor/nprogress/nprogress.css", "content_script.css"],
	"js": ["vendor/nprogress/nprogress.js",
	       "dialog.js", "content_script.js"]
    }]
}
